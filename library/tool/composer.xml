<?xml version="1.0" ?>
<project name="tool-composer" basedir="./../" default="help">
    
    <!-- Get Composer -->
    <target name="composer.get">
        <phingCall target="php.check.curl" />
        <exec command="curl -s https://getcomposer.org/installer | php" />
    </target>
    
    <!-- Remove Composer -->
    <target name="composer.remove">
        <delete file="composer.phar" />
    </target>
    
    
    <!-- Curl -->
    <target name="php.check.curl">
        <php expression="in_array('curl', get_loaded_extensions())" returnProperty="curlEnabled"/>
        <fail unless="curlEnabled" message="You need cUrl to use Composer" />
    </target>
</project>